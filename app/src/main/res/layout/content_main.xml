<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context="ca.georgiancollege.comp3025_lesson10.MainActivity"
    android:id="@+id/DemoLinearLayout">

    <TextView
        android:text="@string/welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/app_text"
        android:id="@+id/WelcomeTextView"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/app_margin_left"
        android:layout_marginTop="@dimen/app_margin_top"
        android:layout_marginRight="@dimen/app_margin_right" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/EnterName"
        android:id="@+id/NameTextView"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/app_text"
        android:layout_marginLeft="@dimen/app_margin_left" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="@string/EnterName"
        android:ems="10"
        android:id="@+id/NameEditText"
        android:layout_marginLeft="@dimen/app_margin_left"
        android:textColor="@color/colorSecondaryText"
        android:textSize="@dimen/app_edit_text" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/ok_button"
            android:id="@+id/OKButton"
            android:textSize="@dimen/app_button_text_size"
            android:layout_weight="2.5" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:layout_weight=".5"
            android:singleLine="true" />

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/cancel_button"
            android:id="@+id/CancelButton"
            android:textSize="@dimen/app_button_text_size"
            android:layout_weight="2.5" />
    </LinearLayout>
</LinearLayout>
